@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="row w-100">
        <!-- Left Image Section -->
        <div class="col-md-6 d-none d-md-flex justify-content-center align-items-center" style="background: url('https://i.ibb.co.com/DpLJWQG/p2plendinh.png') no-repeat center center; background-size: cover;">
        </div>
        
        <!-- Right Login Card Section -->
        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <div class="col-md-8 col-lg-7">
                <div class="card" style="box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15), 0 12px 40px rgba(0, 0, 0, 0.2);">
                    <div class="card-header text-white text-center" style="background: linear-gradient(45deg, #007bff, #003366);">
                        <h3 class="card-title mb-0">Login</h3>
                    </div>
                    <div class="card-body p-4">
                        <form id="loginForm">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input id="email" name="email" type="email" class="form-control" placeholder="Enter your email" required />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input id="password" name="password" type="password" class="form-control" placeholder="Enter your password" required />
                                </div>
                            </div>
                            <button type="button" class="btn w-100 mt-4" onclick="submitLogin()" style="background: linear-gradient(45deg, #007bff, #003366); color: white; border: none;">
                                <i class="fas fa-sign-in-alt"></i> Log In
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/login.js"></script>
